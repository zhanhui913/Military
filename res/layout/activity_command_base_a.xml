<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:scrollbars="vertical" >

  	<TextView android:id="@+id/commandBase_country_label"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/textView_country"
		android:textColor="#0147FA"
		android:textSize="30sp"
		android:layout_gravity="center"
		android:textStyle="bold" />
    
    <Spinner android:id="@+id/commandBase_spinner_country"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>
    
   	<TextView
   	    android:id="@+id/commandBase_base_label"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:layout_gravity="center"
   	    android:paddingTop="@dimen/activity_vertical_margin"
   	    android:text="@string/textView_base"
   	    android:textColor="#0147FA"
   	    android:textSize="30sp"
   	    android:textStyle="bold" />
    
    <Spinner android:id="@+id/commandBase_spinner_base"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>
    
    <Button
        android:id="@+id/commandBase_base"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="GO" 
        android:textSize="30sp"
        android:onClick="viewBase"/>

</LinearLayout>